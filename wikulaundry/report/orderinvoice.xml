<?xml version="1.0" encoding="utf-8"?>
<odoo>    
    <template id="report_wikulaundry_order">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="container fluid">
                    <div class="row">
                        <div class="col-4">
                            Nama  : 
                        </div>
                        <div class="col-8">
                            <span t-field="o.name"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            Tanggal Masuk  :
                        </div>
                        <div class="col-8">
                            <span t-field="o.tanggal_masuk"></span>
                        </div>  
                    </div>
                    <div class="row">
                        <div class="col-4">
                            Jumlah Pesanan  :
                        </div>
                        <div class="col-8">
                            <span t-field="o.jml_pesanan"></span>
                        </div>  
                    </div>
                    <div class="row"> 
                        <div class="col-4">
                            Total Harga  :
                        </div>
                        <div class="col-8">
                            <span t-field="o.total_harga"></span>
                        </div>                           
                    </div>
                </div>                    
                    
                    <div class="row">
                        <div class="col-md-8">
                            <table class="table table-striped table-bordered">
                                <tr>     
                                    <th>Bahan Cucian</th>
                                    <th>Harga per Kg</th>
                                    <th>Berat Cucian</th>
                                    <th>Jumlah Harga</th>
                                </tr>                                        
                                <t t-set="nomor" t-value="1"/>
                                <tr t-foreach="o.detailcucian_ids" t-as="line">
                                    <td><span t-esc = "line.jenis.name"/></td>
                                    <td><span t-esc = "line.harga"/></td>
                                    <td><span t-esc = "line.berat"/></td>
                                    <td><span t-esc = "line.jumlah_harga"/></td>
                                </tr>
                                
                            </table>
                        </div>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>